generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String @map("name")
  lesseID Int @map("lesseID")
  email String @map("email")
  driverLicense Int @map("driverLicense")
  password String @map("password")

  @@unique([lesseID,email,driverLicense])
  @@map("users_table")
}

model Reservation{
  id String @id @default(uuid())
  picklocation String @map("picklocation")
  droplocation String @map("droplocation")
  startingdate DateTime @map("startingdate")
  enddate DateTime @map("enddate")

  @@map("reservation_table")
}

model LesseeDetails{
  id String @id @default(uuid())
  lesseName String @map("lesseName")
  lesseNumber Int @map("lesseNumber")
  lesseExperience Int @map("lesseExperience")
  lesseID Int @map("lesseID")
  driverLicense Int @map("driverLicense")

  @@map("lessee_table")
  @@unique([lesseNumber,lesseID,driverLicense])
}